                ]
            }
        ];

        // 动态加载系列
        function loadSeries() {
            const seriesContainer = document.getElementById('series-container');
            
            seriesData.forEach(series => {
                const seriesCard = document.createElement('div');
                seriesCard.className = 'series-card';
                seriesCard.setAttribute('data-series-id', series.id);
                
                seriesCard.innerHTML = `
                    <img src="${series.image}" alt="${series.title}" class="series-img">
                    <div class="series-info">
                        <h3 class="series-title">${series.title}</h3>
                        <div class="series-count">
                            <i class="fas fa-book"></i>
                            <span>${series.books.length} 部作品</span>
                        </div>
                        <p class="series-description">${series.description.substring(0, 100)}...</p>
                        <button class="btn view-series-btn" data-series-id="${series.id}">查看详情</button>
                    </div>
                `;
                
                seriesContainer.appendChild(seriesCard);
            });
            
            // 添加查看详情按钮的事件监听
            document.querySelectorAll('.view-series-btn').forEach(button => {
                button.addEventListener('click', function() {
                    const seriesId = parseInt(this.getAttribute('data-series-id'));
                    openSeriesModal(seriesId);
                });
            });
            
            // 添加系列卡片点击事件
            document.querySelectorAll('.series-card').forEach(card => {
                card.addEventListener('click', function() {
                    const seriesId = parseInt(this.getAttribute('data-series-id'));
                    openSeriesModal(seriesId);
                });
            });
        }

        // 打开系列详情模态框
        function openSeriesModal(seriesId) {
            const series = seriesData.find(s => s.id === seriesId);
            if (!series) return;
            
            // 更新模态框内容
            document.getElementById('modal-series-title').textContent = series.title;
            document.getElementById('modal-series-subtitle').textContent = series.subtitle;
            document.getElementById('modal-series-description').textContent = series.description;
            
            // 清空并重新加载书目
            const booksContainer = document.getElementById('modal-books-container');
            booksContainer.innerHTML = '';
            
            series.books.forEach(book => {
                const bookCard = document.createElement('div');
                bookCard.className = 'book-card';
                
                bookCard.innerHTML = `
                    <img src="${book.cover}" alt="${book.title}" class="book-cover">
                    <div class="book-info">
                        <h4 class="book-title">${book.title}</h4>
                        <p class="book-date">${book.date}</p>
                    </div>
                `;
                
                booksContainer.appendChild(bookCard);
            });
            
            // 显示模态框
            document.getElementById('series-modal').style.display = 'block';
        }

        // 关闭模态框
        function closeModal() {
            document.getElementById('series-modal').style.display = 'none';
        }

        // 页面加载完成后执行
        document.addEventListener('DOMContentLoaded', function() {
            loadSeries();
            
            // 关闭模态框事件
            document.getElementById('close-modal').addEventListener('click', closeModal);
            
            // 点击模态框外部关闭
            document.getElementById('series-modal').addEventListener('click', function(e) {
                if (e.target === this) {
                    closeModal();
                }
            });
            
            // ESC键关闭模态框
            document.addEventListener('keydown', function(e) {
                if (e.key === 'Escape') {
                    closeModal();
                }
            });
        });
    </script>
</body>
</html>
